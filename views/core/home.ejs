<% layout('layouts/boilerplate')%>

<h1>All configured modules</h1>
<div>
    <a href="/module/new">Add a New Module</a>
</div>
<% for (let module of modules){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-sm-6" >
            <div class="card-body">
            <h2 class="card-title"><%= module.name %> </h2>
            <a class="card-link btn btn-info" href="/module/<%=module._id%>/edit">Edit</a>
            <form class="d-inline" action="/module/<%=module._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
            </div>
        </div>
        <div class="col-sm-6" >
            <div class="card-body">
            <div class="d-flex flex-row-reverse">
            <a class="btn btn-primary" href="/module/<%=module._id%>/mocks">View </a>
            </div>
            </div>
            <div class="card-body">
                <div class="d-flex flex-row-reverse">
                    <h5 class="card-title"><b>count</b> :<%=module.length%> </h5>
                </div>
            </div>
        </div>
    </div>

</div>
<% }%>


